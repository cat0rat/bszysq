<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bszy.admin.mapper.SysmsgMapper" >

	<sql id="sql_list_where">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="name != null and name != ''">AND a.name LIKE CONCAT('%',#{name},'%' )</if>
			<if test="content != null and content != ''">AND a.content LIKE CONCAT('%',#{content},'%' )</if>
			<if test="typex != null">AND a.typex = #{typex}</if>
			<if test="extra != null">AND a.extra = #{extra}</if>
			
			<if test="userid != null">AND a.userid = #{userid}</if>
			<if test="getuicid != null">AND a.getuicid = #{getuicid}</if>
			
			<if test="rangx != null">AND a.rangx = #{rangx}</if>
			<if test="descx != null and descx != ''">AND a.descx LIKE CONCAT('%',#{descx},'%' )</if>
			
			<if test="stime != null">AND a.ctime &gt;= #{stime}</if>
			<if test="etime != null">AND a.ctime &lt;= #{etime}</if>
			
			<if test="isdel != null">AND a.isdel = #{isdel}</if>
		</trim>
	</sql>
	
	<select id="list" resultType="Sysmsg" >
		SELECT a.* FROM tbl_sysmsg a
		<include refid="sql_list_where"></include>
		<include refid="Common.sql_order_limit"></include>
	</select>
	<select id="lscount" resultType="Long" >
		SELECT COUNT(0) FROM tbl_sysmsg a
		<include refid="sql_list_where"></include>
	</select>
	
	
	<select id="get" resultType="Sysmsg" >
		SELECT a.* FROM tbl_sysmsg a WHERE a.id = #{id}
	</select>
	<delete id="delete">
		DELETE FROM tbl_sysmsg WHERE id = #{id}
	</delete>
	<delete id="dels">
		DELETE FROM tbl_sysmsg WHERE id in(${ids})
	</delete>
	
	<insert id="add" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO tbl_sysmsg(name, content, typex, extra,
			 userid, getuicid, rangx, descx, 
			ctime, utime, isdel) 
		VALUES(#{name}, #{content}, #{typex}, #{extra}, 
			#{userid}, #{getuicid}, #{rangx}, #{descx}, 
			#{ctime}, #{utime}, #{isdel})
	</insert>
	<update id="update" >
		UPDATE tbl_sysmsg a
		<trim prefix="SET" suffixOverrides=",">
			<if test="name != null">a.name = #{name},</if>
			<if test="content != null">a.content = #{content},</if>
			<if test="typex != null">a.typex = #{typex},</if>
			<if test="extra != null">a.extra = #{extra},</if>
			
			<if test="userid != null">a.userid = #{userid},</if>
			<if test="getuicid != null">a.getuicid = #{getuicid},</if>
			<if test="rangx != null">a.rangx = #{rangx},</if>
			<if test="descx != null">a.descx = #{descx},</if>
			
			<if test="utime != null">a.utime = #{utime},</if>
			<if test="isdel != null">a.isdel = #{isdel},</if>
		</trim>
		WHERE a.id = #{id}
	</update>
	
    
</mapper>