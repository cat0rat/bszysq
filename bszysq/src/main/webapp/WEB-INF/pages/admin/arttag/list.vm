<!DOCTYPE html>
<html>
<head>
<title>#app_name()</title>
#base()
<script type="text/javascript">
 $(function() {
	 //loadData('/admin/arttag/list.json');
	 z.load_data({
	 	dg_opt: {
	 		url: '/admin/arttag/list.json',
	 		columns: z.column_base([
	 			{field: 'name', title: '分类名称', width: 200, align: 'center'},
				{field: 'sortn', title: '排序号', width: 60, align: 'center'}
	 		])
	 	}
	 });
 });
 function search() {
	 var queryParams = $('#data_list').datagrid('options').queryParams;
	 queryParams.name = $("#name").val();
	 $('#data_list').datagrid('options').queryParams = queryParams;
	 $("#data_list").datagrid('reload');
	 jQuery("#data_list").datagrid('reload');
 }
 function add() {//新增数据
	 addListData('/admin/arttag/add.do', 'add_arttag');
 }
 function edit() {//修改数据
	 z.editListData('/admin/arttag/edit.do', 'edit_arttag');
 }
 function del() { //删除数据  
	 z.del('/admin/arttag/delete.json');
 }
 function view() {//查看数据
	 z.viewListData('/admin/arttag/view.do', 'view_arttag');
 }
 </script>
 </head>
 <body>
 <div>
	 <!-- Search panel start -->
	 <div class="easyui-panel ui-search-panel" style="padding: 10px;" title="条件查询" data-options="striped: true,collapsible:true,iconCls:'icon-search'">
		 <form id="searchForm">
			 <p class="ui-fields">
				 <label class="ui-label">查询条件:</label><input id="name" name="name" class="easyui-box ui-text" style="width: 100px;">
				 <a href="javascript:search();" id="btn-search" class="easyui-linkbutton" iconCls="icon-search">搜索</a>
			 </p>
		 </form>
	 </div>
	 <!--  Search panel end -->
	 <div id="toolbar">
		 <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="add()">新增</a>
		 <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="edit()">修改</a>
		 <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del()">删除</a>
		 <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="view()">详情</a>
	 </div>
	 <table id="data_list" title="数据列表"></table>
 </div>
 </body>
 </html>