<!DOCTYPE html>
<html>
<head>
<title>#app_name()</title> 
#base()
<script type="text/javascript">
	function closeDialog() {
		top.jQuery('#edit_arttag').dialog('close');
	}
	function doSubmit() {
		var isValid = Q("#data_form").form('validate');
		if (isValid)
			Q.ajax({
				url : '/admin/arttag/update.json',
				type : 'post',
				data : Q('#data_form').serialize(),
				dataType : 'json',
				success : function(data) {
					if (data.code == '200') {
						Q.messager.alert('温馨提示', '保存成功!', '', function() {
							closeDialog();
						});
					} else {
						Q.messager.alert('温馨提示', '保存失败!', 'error');
					}
				},
				error : function() {
					Q.messager.alert('温馨提示', '系统繁忙，请重试!', 'error');
				}
			});
	}
</script>
</head>
<body>
	<div id="Comm_ModelName">修改数据</div>
	<div id="Comm_Form">
		<form id="data_form" method="post" style="width: 100%;">
			<input type="hidden" name="id" value="$!{bean.id}" />
			<table border="0" cellpadding="0" cellspacing="0">
				<tr>
					<td class="form_key">分类名称：</td>
					<td class="form_input">
						<input class="easyui-validatebox" type="text" name="name" value="$!{bean.name}"
							data-options="required:true,validType:'illChart'" />
					</td>
				</tr>
			</table>
		</form>
	</div>
	<div style="text-align:center;padding:30px">
		<a href="javascript:void(0)" class="easyui-linkbutton"
			onclick="doSubmit()" iconCls="icon-save">保存</a> 
		<a href="javascript:void(0)" class="easyui-linkbutton"
			onclick="closeDialog()" iconCls="icon-back">关闭</a>
	</div>
</body>
</html>